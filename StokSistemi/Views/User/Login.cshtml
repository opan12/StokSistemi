@model UserLoginModel

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="card shadow p-4" style="width: 80%; max-width: 400px;">
        <h3 class="text-center mb-4">Giriş Yap</h3>

        <!-- Uyarı Mesajı Alanı -->
        <div id="alertMessage" class="alert alert-danger" role="alert" style="display: none;"></div>

        <form id="loginForm" method="post" onsubmit="return validateForm()">
            <!-- Username Field -->
            <div class="form-group mb-3">
                <label asp-for="Username" class="form-label">Kullanıcı Adı</label>
                <input asp-for="Username" class="form-control" placeholder="Kullanıcı Adı" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <!-- Password Field -->
            <div class="form-group mb-4">
                <label asp-for="Şifre" class="form-label">Şifre</label>
                <input asp-for="Şifre" type="password" class="form-control" placeholder="Şifre" />
                <span asp-validation-for="Şifre" class="text-danger"></span>
            </div>

            <!-- Buttons -->
            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary">Giriş Yap</button>
                <a href="/User/Register" class="btn btn-secondary">Kayıt Ol</a>
                <a href="@Url.Action("ForgotPassword", "Account")" class="button password-update-button">Şifre Yenile</a>

            </div>
        </form>
    </div>
</div>

<script>
    function validateForm() {
        // Uyarı mesajı alanını sıfırla
        const alertMessage = document.getElementById("alertMessage");
        alertMessage.style.display = "none";
        alertMessage.innerHTML = "";

        // Kullanıcı adı ve şifre alanlarını al
        const username = document.querySelector('input[name="Username"]').value;
        const password = document.querySelector('input[name="Şifre"]').value;

        // Basit doğrulama: Kullanıcı adı ve şifre boş olamaz
        if (!username || !password) {
            alertMessage.innerHTML = "Kullanıcı adı ve şifre boş olamaz.";
            alertMessage.style.display = "block";
            return false; // Formu gönderme
        }

        // Diğer özel doğrulamalar burada yapılabilir

        // Eğer her şey uygunsa formun gönderilmesine izin ver
        return true;
    }
</script>
