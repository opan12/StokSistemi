@model StokSistemi.Models.Product

<h2>Ürünü Düzenle</h2>

<form asp-action="Edit" asp-controller="Product">
    <div class="form-group">
        <label>Ürün ID</label>
        <input type="hidden" asp-for="ProductId" />
    </div>
    <div class="form-group">
        <label>Ürün Adı</label>
        <input type="text" class="form-control" asp-for="ProductName" readonly />
    </div>
    <div class="form-group">
        <label>Stok Miktarı</label>
        <input type="number" class="form-control" asp-for="Stock" />
    </div>
    <div class="form-group">
        <label>Fiyat</label>
        <input type="text" class="form-control" asp-for="Price" />
    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>
