@model IEnumerable<StokSistemi.Models.Product>

<h2>Ürün Yönetimi</h2>

<table>
    <thead>
        <tr>
            <th>Ürün ID</th>
            <th>Ürün Adı</th>
            <th>Stok</th>
            <th>Fiyat</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ProductId</td>
                <td>@product.ProductName</td>
                <td>@product.Stock</td>
                <td>@product.Price</td>
                <td>
                    <form asp-action="Delete" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@product.ProductId" />
                        <button type="submit">Sil</button>
                    </form>
                    <a asp-action="Edit" asp-route-id="@product.ProductId">Düzenle</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create">Yeni Ürün Ekle</a>
