@{
    ViewData["Title"] = "Siparişlerim";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Siparişlerim</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body class="bg-light">
    <div class="container mt-5">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h3 class="mb-0"><i class="fas fa-box"></i> Siparişlerim</h3>
            </div>
            <div class="card-body">
                <p class="text-muted">Siparişleriniz aşağıda listelenmektedir:</p>

                <table class="table table-striped table-bordered">
                    <thead class="table-light">
                        <tr>
                            <th>Sipariş ID</th>
                            <th>Ürün ID</th>
                            <th>Adet</th>
                            <th>Sipariş Tarihi</th>
                            <th>Durum</th>
                        </tr>
                    </thead>
                    <tbody id="orderTableBody">
                        <tr>
                            <td colspan="5" class="text-center">Sipariş bilgisi yükleniyor...</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script>
        $(document).ready(function () {
            function loadOrders() {
                $.ajax({
                    url: '@Url.Action("CheckOrderStatus", "Customer")',
                    type: 'GET',
                    success: function (response) {
                        if (response.success) {
                            var orders = response.orders;
                            var tableBody = $('#orderTableBody');
                            tableBody.empty(); // Önce tabloyu temizle

                            orders.forEach(function (order) {
                                var statusClass = "";
                                if (order.orderStatus === "Pending") {
                                    statusClass = "text-warning";
                                } else if (order.orderStatus === "Sipariş Verildi") {
                                    statusClass = "text-success";
                                } else if (order.orderStatus === "Stok Yetersiz") {
                                    statusClass = "text-danger";
                                } else if (order.orderStatus === "Onaylandı") {
                                    statusClass = "text-primary";
                                }

                                tableBody.append(`
                                            <tr>
                                                <td>${order.orderId}</td>
                                                <td>${order.productId}</td>
                                                <td>${order.quantity}</td>
                                                <td>${new Date(order.orderDate).toLocaleString('tr-TR')}</td>
                                                <td class="${statusClass}">${order.orderStatus}</td>
                                            </tr>
                                        `);
                            });
                        } else {
                            $('#orderTableBody').html(`<tr><td colspan="5" class="text-center">${response.message}</td></tr>`);
                        }
                    },
                    error: function () {
                        $('#orderTableBody').html('<tr><td colspan="5" class="text-center">Sipariş durumu alınırken bir hata oluştu.</td></tr>');
                    }
                });
            }

            // Sayfa yüklendiğinde siparişleri getir
            loadOrders();

            // Belirli aralıklarla sipariş durumu güncelle (örnek: her 10 saniye)
            setInterval(loadOrders, 10000);
        });
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
