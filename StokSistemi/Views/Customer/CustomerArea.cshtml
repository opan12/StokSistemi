<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css">
    <style>
        .btn-icon {
            display: flex;
            align-items: center;
            font-size: 16px;
        }

            .btn-icon i {
                margin-right: 8px;
                color: #007bff;
            }

        .navbar {
            margin-bottom: 20px;
        }

        .navbar-brand {
            font-weight: bold;
            color: #007bff;
        }

        .nav-link {
            color: #007bff;
            font-weight: 500;
        }

            .nav-link:hover {
                color: #0056b3;
                text-decoration: none;
            }

        .navbar-toggler {
            border-color: transparent;
        }

        .navbar-toggler-icon {
            background-color: #007bff;
        }
    </style>
</head>
<body>
    <!-- Navbar Başlangıcı -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm">
        <div class="container">
            <a class="navbar-brand" href="#">MySite</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/Customer/Index" onclick="return checkCurrentPage();">
                            <i class="fas fa-plus-circle"></i> Sipariş Oluştur
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Customer/CheckOrder">
                            <i class="fas fa-list-ul"></i> Siparişler
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Customer/Check">
                            <i class="fas fa-clock"></i> Sipariş Süre
                        </a>
                    <li class="nav-item">
                        <a class="nav-link" href="/Customer/Sepetim">
                            <i class="fas fa-clock"></i> Sepetim
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <!-- Navbar Bitişi -->

    <div class="container mt-4">
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger" role="alert">
                @TempData["ErrorMessage"]
            </div>
        }

        <h1 class="display-6">Hoşgeldin, @User.Identity.Name!</h1>

        <!-- İçerik burada olacak -->
    </div>


    <script>
    function checkCurrentPage() {
        // Örnek: `CurrentPage`'i kontrol etmek için bir AJAX isteği gönderilebilir
        const currentPage = sessionStorage.getItem("CurrentPage"); // Örnek kullanım
        if (currentPage === "ProductIndex") {
            alert("Bu sayfadan 'Sipariş Oluştur' işlemine erişilemez.");
            return false; // Bağlantıyı engelle
        }
        return true; // Normal davranışı sürdür
    }
</script>
</body>
</html>
