@{
    ViewData["Title"] = "Bildirimler";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <div class="container mt-5">
        <!-- Header Section -->
        <div class="card shadow-sm mb-4">
            <div class="card-body d-flex justify-content-between align-items-center">
                <h1 class="display-6 text-primary">
                    <i class="fas fa-bell"></i> Hoşgeldin, @User.Identity.Name!
                </h1>
                <div class="btn-group" role="group" aria-label="Admin Actions">
                    <a href="/Admin/Create" class="btn btn-outline-primary">
                        <i class="fas fa-plus"></i> Stok Ekle
                    </a>
                    <a href="/Product/Index" class="btn btn-outline-primary">
                        <i class="fas fa-edit"></i> Stok Düzenle
                    </a>
                    <a href="/Admin/PendingOrders" class="btn btn-outline-warning">
                        <i class="fas fa-clock"></i> Onay Bekleyen Siparişler
                    </a>
                    <a href="/Admin/AllOrders" class="btn btn-outline-success">
                        <i class="fas fa-list"></i> Tüm Siparişlere Git
                    </a>
                    <a href="/Admin/Skor" class="btn btn-outline-secondary">
                        <i class="fas fa-chart-line"></i> Skor Sayfasına Git
                    </a>
                    <a href="/Admin/Log" class="btn btn-outline-secondary">
                        <i class="fas fa-chart-line"></i> Log Sayfasına Git
                    </a>
                </div>
            </div>
        </div>

        <!-- Content Section Placeholder -->
        <div class="alert alert-info text-center" role="alert">
            <i class="fas fa-info-circle"></i> Bu alana içerik eklemek için hazırız. Şu an bir bildirim yok!
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/js/all.min.js"></script>
</body>
</html>
