@model StokSistemi.Models.Product

@{
    ViewData["Title"] = "Yeni Ürün Ekle";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <div class="container mt-5">
        <!-- Page Title -->
        <div class="text-center mb-4">
            <h1 class="display-6 text-primary">
                <i class="fas fa-box"></i> Yeni Ürün Ekle
            </h1>
            <p class="text-muted">Lütfen yeni ürün bilgilerini eksiksiz doldurun.</p>
        </div>

        <!-- Form Section -->
        <div class="card shadow-sm">
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div class="mb-3">
                        <label asp-for="ProductName" class="form-label text-primary fw-semibold">Ürün Adı</label>
                        <input asp-for="ProductName" class="form-control" placeholder="Ürün adı giriniz" />
                        <span asp-validation-for="ProductName" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Stock" class="form-label text-primary fw-semibold">Stok</label>
                        <input asp-for="Stock" class="form-control" type="number" placeholder="Stok miktarı giriniz" />
                        <span asp-validation-for="Stock" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Price" class="form-label text-primary fw-semibold">Fiyat</label>
                        <input asp-for="Price" class="form-control" type="number" step="0.01" placeholder="Ürün fiyatı giriniz" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="d-flex justify-content-between">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-check"></i> Ekle
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-times"></i> İptal
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
