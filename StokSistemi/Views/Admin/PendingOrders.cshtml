@model IEnumerable<StokSistemi.Models.Order>

<h3>Onay Bekleyen Siparişler</h3>

@if (ViewData["Message"] != null)
{
    <div class="alert alert-info">
        @ViewData["Message"]
    </div>
}

<form asp-action="ApproveAllOrders" method="post">
    <button type="submit" class="btn btn-primary mb-3">Tümünü Onayla</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Sipariş ID</th>
            <th>Müşteri ID</th>
            <th>Ürün ID</th>
            <th>Miktar</th>
            <th>Toplam Fiyat</th>
            <th>Sipariş Tarihi</th>
            <th>Durum</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderId</td>
                <td>@order.CustomerId</td>
                <td>@order.ProductId</td>
                <td>@order.Quantity</td>
                <td>@order.TotalPrice.ToString("C")</td>
                <td>@order.OrderDate.ToString("g")</td>
                <td>@order.OrderStatus</td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        function showSuccessMessage(message) {
            Swal.fire({
                icon: 'success',
                title: 'Başarılı!',
                text: message,
                confirmButtonText: 'Tamam'
            }).then(() => {
                window.location.href = '/Admin/PendingOrders'; // Onaylanan siparişlerin listelendiği sayfaya yönlendir
            });
        }

        function showErrorMessage(message) {
            Swal.fire({
                icon: 'error',
                title: 'Hata!',
                text: message,
                confirmButtonText: 'Tamam'
            });
        }

        $(document).ready(function () {
            $("form[asp-action='ApproveAllOrders']").submit(function (e) {
                e.preventDefault(); // Form submission'unu engeller

                $.ajax({
                    url: $(this).attr('action'), // Form action'ını alır
                    type: 'POST',
                    success: function (response) {
                        if (response.success) {
                            showSuccessMessage(response.message); // Başarılı işlemin uyarısını göster
                        } else {
                            showErrorMessage(response.message); // Hata mesajı göster
                        }
                    },
                    error: function () {
                        showErrorMessage('An error occurred while processing the request.');
                    }
                });
            });
        });
    </script>
}
